<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#2A4987"
    tools:context="demo.example.com.pandalive.ui.fragment.chinaFragment.MainZgActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/zg_duoimge"
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/y100"
                android:layout_gravity="right"
                android:src="@drawable/abc_ic_clear_mtrl_alpha" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="切换栏目"
                android:textColor="#FFFFFF" />

            <demo.example.com.pandalive.utils.DragGridView
                android:id="@+id/zg_duorecy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x400"
                android:numColumns="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="点击加载更多栏目"
                android:textColor="#FFFFFF" />

            <demo.example.com.pandalive.utils.DragGridView
                android:id="@+id/zg_duorecys"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x600"
                android:numColumns="3" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>
