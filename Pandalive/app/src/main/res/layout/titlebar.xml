<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:background="#1F539E">

        <TextView
            android:id="@+id/TextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="@dimen/x30" />
    </android.support.v7.widget.Toolbar>


    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view"></FrameLayout>

    <ImageView
        android:id="@+id/ImageViewBar"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/y60"
        android:layout_alignBottom="@+id/view"
        android:src="@drawable/panda_sign" />

    <ImageView
        android:id="@+id/ImageDengLu"
        android:layout_width="@dimen/x40"
        android:layout_height="@dimen/y40"
        android:layout_above="@+id/frame"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/person_sign" />

    <ImageView
        android:id="@+id/hudongImage"
        android:layout_width="@dimen/x40"
        android:layout_height="@dimen/y40"
        android:layout_above="@+id/frame"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/ImageDengLu"
        android:layout_toStartOf="@+id/ImageDengLu"
        android:src="@drawable/hudong_sign" />
    >


</RelativeLayout>