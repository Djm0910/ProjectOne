<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/Img_jingcai"
        android:layout_width="@dimen/x320"
        android:layout_height="@dimen/y280"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:layout_below="@+id/Img_jingcai"
        android:id="@+id/title_jingcai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ssss"
        android:textSize="@dimen/x20" />

    <TextView
        android:layout_below="@+id/title_jingcai"
        android:id="@+id/time_jingcai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x20" />

</RelativeLayout>